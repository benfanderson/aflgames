    script.
        const scores = document.getElementById('scores');
        //- const teams = document.getElementsByClassName('team-score');
        //- const venues = document.getElementsByClassName('venue');
        //- const date = document.getElementsByClassName('date-time');
        const socket = io();

        socket.on('FromAPI', roundArray => {
            console.log(roundArray.length);
            for (let i = 0; i < roundArray.length; i++) {
                const game = document.createElement('div');
                game.classList.add('game');
                scores.appendChild(game);
                const teams = document.createElement('p');
                teams.classList.add('team-score');
                game.appendChild(teams);
                const venue = document.createElement('p');
                venue.classList.add('venue');
                game.appendChild(venue);
                const date = document.createElement('p');
                date.classList.add('date-time');
                game.appendChild(date);

                if (roundArray[i].complete === 0) {
                    teams.innerHTML= ` ${roundArray[i].hteam} v ${roundArray[i].ateam}`;
                    venue.innerHTML = `${roundArray[i].venue}`;
                    date.innerHTML = `${roundArray[i].day}, ${roundArray[i].time}`;
                } else if (roundArray[i].complete < 100) {
                    teams.innerHTML= `${roundArray[i].hteam} ${roundArray[i].hgoals}.${roundArray[i].hbehinds} ${roundArray[i].hscore} v ${roundArray[i].ateam} ${roundArray[i].agoals}.${roundArray[i].abehinds} ${roundArray[i].ascore}`
                    venue.innerHTML = `${roundArray[i].venue}`;
                    date.innerHTML = "LIVE NOW";
                    date.classList.add("live-score");

                } else {
                    teams.innerHTML= `${roundArray[i].hteam} ${roundArray[i].hgoals}.${roundArray[i].hbehinds} ${roundArray[i].hscore} v ${roundArray[i].ateam} ${roundArray[i].agoals}.${roundArray[i].abehinds} ${roundArray[i].ascore}`;
                    venue.innerHTML = `${roundArray[i].venue}`;
                    date.classList.remove("live-score");
                    date.innerHTML = `${roundArray[i].day}, ${roundArray[i].time}`;
                }
            }
        });

